/**bx_apply.wxss**/
.container{
    padding-bottom: 55rpx;
    background-color: #f7f7f7;
}
.repair-detail{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-top: 1px solid #eee;
    margin-top: 30rpx;
    overflow: hidden;
}
.repair-detail-item{
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #ddd;
}
.repair-detail-item.error{
    background: rgba(231, 138, 176, 0.06);
}
.repair-detail-item-hd{
    display: flex;
    align-items: center;
    height: 88rpx;
    font-size: 11pt;
    margin-left: 30rpx;
}
.repair-detail-item-ft{
    font-size: 10pt;
    flex: 1;
    display: flex;
    align-items: center;
    padding-right: 30rpx;
}
.repair-detail-picker {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.repair-detail-content{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 20rpx 0;
}
.repair-detail-info {
    flex: 1;
}
.repair-detail-info.disabled{
    color: #bbb;
}
.more-icon{
    width: 18rpx;
    height: 27rpx;
    margin-left: 30rpx;
}



.reporter-detail{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin-top: 25rpx;
    overflow: hidden;
}
.reporter-detail-item{
    display: flex;
    align-items: center;
    height: 88rpx;
    border-bottom: 1px solid #e5e5e5;
    padding-left: 30rpx;
}
.reporter-detail-item.error{
    background: rgba(231, 138, 176, 0.06);
}
.reporter-detail-item.reporter-address {
    border: none;
}
.reporter-user .reporter-detail-input{
    color: #999;
}
.reporter-detail-name{
    font-size: 11pt;
}
.service-cells-items{
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.servcie-cell-item{
    height: 70rpx;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    align-items: center;
}
.reporter-detail-input{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 30rpx;
    padding-left: 45rpx;
}
.reporter-detail-input input{
    font-size: 10pt;
    width: 100%;
}
.input-placeholder {
    font-size: 10pt;
}
.declare-context{
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    overflow: hidden;
}
.declare-context-panel{
    display: flex;
    flex-direction: column;
    align-items: stretch;
    background-color: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
}
.declare-context-title{
    color: #888;
    margin: 5rpx 0 10rpx 30rpx;
}
.declare-context-input {
    border-bottom: 1px solid #e5e5e5;
    height: 88rpx;
    padding: 0 30rpx;
}
.declare-context-input input{
    height: 88rpx;
}
.declare-context-input.error{
    background: rgba(231, 138, 176, 0.06);
}
.declare-context-textarea{
    padding: 30rpx;
    width: 100%;
    min-height: 200rpx;
    box-sizing:border-box;
}
.declare-context-textarea.error{
    background: rgba(231, 138, 176, 0.06);
}
.submit-declare{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx 3%;
    height: 80rpx;
    border-radius: 3px;
    text-align: center;
    background-color: #7acfa6;
    color: #fff;
    font-size: 12pt;
}
.submit-declare:active{
    opacity: .8;
}



.tab-h{
    height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99;}
.tab-item{margin:0 36rpx;display: inline-block;}
.tab-item.active{color: #7acfa6;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 100%;background: #7acfa6;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 180rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #7acfa6; color:#7acfa6;}
.tab-content{margin-top: 80rpx;}
.scoll-h{height: 100%;}